name="ndhs daemon"
description="ndhs dhcp[46]/router advertisement server"
command=/usr/local/sbin/ndhs
command_background=true
pidfile="/run/ndhs.pid"
command_args="-S ${ndhs_args}"

depend() {
    need net.lan0 net.lan1
    use logger
}
